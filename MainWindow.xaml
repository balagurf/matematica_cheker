<Window x:Class="GrammarChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grammar Tool" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TextBlock x:Name="StatusText" 
           Grid.Row="4" 
           Margin="5"
           FontWeight="Bold"
           Foreground="DarkBlue"
           Text=""/>

            <!-- Вкладка 1: классификация -->
            <TabItem Header="Классификация">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Правила грамматики (формат A->aB):" FontWeight="Bold"/>
                    <TextBox x:Name="RulesInput" Grid.Row="1" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
                    <Button Grid.Row="2" Content="Анализировать" Click="CheckButton_Click"
                            Margin="0,5,0,5"/>
                    
                    <TextBox x:Name="DetailsOutput" Grid.Row="3" IsReadOnly="True"
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"/>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: дерево вывода -->
            <TabItem Header="Дерево вывода">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Правила грамматики (например S->abS | bcS | bbS | a | cb):" FontWeight="Bold"/>
                    <TextBox x:Name="TreeRulesInput" Grid.Row="1" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Строка для вывода:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TargetString" Width="200" Margin="10,0"/>
                        <Button Content="Построить дерево" Click="BuildTree_Click"/>
                        <Button Content="Разбор строк" Width="150" Margin="5" Click="OpenParsingPage_Click"/>
                        
                    </StackPanel>

                    <TextBox x:Name="TreeOutput" Grid.Row="3" IsReadOnly="True"
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
