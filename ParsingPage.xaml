<Page x:Class="GrammarChecker.ParsingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ParsingPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввод строки -->
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Введите строку: " VerticalAlignment="Center"/>
            <TextBox x:Name="InputString" Width="200" Margin="5"/>
            <Button Content="Проверить" Click="CheckString_Click" Margin="5"/>
        </StackPanel>

        <!-- Результат -->
        <TextBlock x:Name="ResultText" Grid.Row="1" Margin="5"
                   FontWeight="Bold" Foreground="DarkBlue"/>

        <!-- Вывод дерева разбора -->
        <TextBlock Text="Дерево разбора:" Grid.Row="2" Margin="5"
                   FontWeight="Bold"/>
        <TextBox x:Name="ParseTreeOutput"
                 Grid.Row="3"
                 Margin="5"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Height="250"/>
    </Grid>
</Page>
